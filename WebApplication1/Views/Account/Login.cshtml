@{
    Layout = null;
}



<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="icon" type="image/x-icon" href="~/img/logo/logo.ico">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">

    <title>Diary Of My Days | Login</title>
</head>
<body>
    <div class="container-xxl">
        <div class="authentication-wrapper authentication-basic container-p-y whole_for_div">
            <div class="authentication-inner">
                <div class="card">
                    <div class="card-body">
                        <div class="app-brand justify-content-center">
                            <a href="#" class="login_logo">
                                <span class="app-brand-text demo text-body fw-bolder">
                                    <img src="~/img/logo/Diary_Of_My_Days.png">
                                </span>
                            </a>
                        </div>
                        <h4 class="mb-2">Welcome to Diary! 👋</h4>
                        <p class="mb-4">Please sign-in to your account and start the Madhesh Madhesh</p>
                        <form id="formAuthentication" class="mb-3" action="#" method="GET">
                            <div class="mb-4">
                                <label for="email" class="form-label">Email or Username</label>
                                <input type="text" class="form-login-control" id="email" name="email-username" placeholder="Enter your email or username" autofocus="">
                            </div>
                            <div class="mb-4 form-password-toggle">
                                <div class="d-flex justify-content-between">
                                    <label class="form-label" for="password">Password</label>
                                    <a href="#">
                                        <small>Forgot Password?</small>
                                    </a>
                                </div>
                                <div class="input-group input-group-merge">
                                    <input type="password" id="password" class="form-login-control" name="password" placeholder="············">
                                </div>
                            </div>
                            <div class="mb-3">
                                <div class="form-check">
                                    <input class="login-form-check-input" type="checkbox" id="remember-me">
                                    <label class="form-check-label" for="remember-me">
                                        Remember Me
                                    </label>
                                </div>
                            </div>
                            <div class="mb-3">
                                <button class="btn login-btn-primary d-grid w-100" type="submit">Sign in</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>

</body>
</html>